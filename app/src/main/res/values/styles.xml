<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowAnimationStyle">@style/AppWindowAnimationStyle</item>
    </style>

    <style name="AppWindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left_to_right</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Text" />

    <style name="Text.Body">
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Text.Body.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="Text.Caption">
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>
</resources>
