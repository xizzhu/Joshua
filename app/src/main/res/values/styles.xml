<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="actionModeBackground">@color/primary</item>
        <item name="actionModeCloseButtonStyle">@style/AppActionModeCloseButtonStyle</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowAnimationStyle">@style/AppWindowAnimationStyle</item>
    </style>

    <style name="AppActionModeCloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppWindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left_to_right</item>
    </style>

    <style name="AppCheckBoxStyle">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Text" />

    <style name="Text.Body">
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Text.Body.Dark">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="Text.Body.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="Text.Caption">
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="Text.Caption.Dark">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="Text.Caption.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>
</resources>
